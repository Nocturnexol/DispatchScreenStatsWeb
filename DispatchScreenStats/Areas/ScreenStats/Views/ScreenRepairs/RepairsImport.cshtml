@{
    var F = @Html.F();
}
@section body {
    @(F.SimpleForm()
        .ID("SimpleForm1")
        .BodyPadding(5)
        .Width(550)
        .EnableCollapse(true)
        .ShowBorder(true)
        .ShowHeader(false)
        .Items(
            F.FileUpload()
                .ID("file")
                .EmptyText("请选择Excel文件")
                .Label("文件")
                .Required(true)
                .ShowRedStar(true),
            F.Button()
                .ID("btnSubmit")
                                        .OnClick(Url.Content("~/ScreenStats/ScreenRepairs/RepairsImport"), "SimpleForm1")
                .ValidateForms("SimpleForm1")
                .Text("导入")
        )
    )
}

